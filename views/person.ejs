<%- include('./partials/head') %>

<a href="/">Back</a>

<h2><%= person.name %></h2>

<img src="<%= person.avatar %>" alt="person avatar">

<p>Squad: <%= person.squad_id %>

<h2>Huidige berichten</h2>

    <ul>
        <% messages.forEach(message => { %>
            <li><%= message %> </li>
        <% }) %>
    </ul>

    <form method="POST" action="/detail/<%= person.id %>>
        <input type="hidden" name="id" value="<%= person.id %>">
        <label>
            Berichtje:
            <textarea required name="bericht"></textarea>
        </label>
        <button type="submit"> Verstuur bericht </button>
    </form>

